<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".IPSRenderer">

  <!-- Material Toolbar -->
  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:title="IPS Renderer" />

  <!-- MaterialCardView for Document Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/documentTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView for Document Table -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/documentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Document Table Content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  </com.google.android.material.card.MaterialCardView>

  <!-- Repeat similar MaterialCardView elements for other tables and sections -->

  <!-- MaterialCardView for Immunization Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/immunizationTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Allergies Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/allergiesTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Results Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/resultsTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Medication Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/medicationTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Problems Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/problemsTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Allergies Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/allergiesSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Problem Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/problemSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Medication Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/medicationSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Immunization Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/immunizationSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Results Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/resultsSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

  <!-- MaterialCardView for Patient Table -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/patientTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="2dp"
      app:strokeWidth="2dp"
      app:strokeColor="?attr/colorOnSurface">

    <!-- Inside the MaterialCardView, add MaterialTextView or other components as needed -->
  </com.google.android.material.card.MaterialCardView>

</LinearLayout>
